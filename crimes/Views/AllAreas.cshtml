@page
@model AllAreasModel
@{
  ViewData["Title"] = "All Areas";
}

<h2>All Areas</h2>  

@{
   if (@Model.EX != null)
	 {
	   <br />
		 <br />
		 <h3>**ERROR: @Model.EX.Message</h3>
		 <br />
		 <hr />
		 <br />
		 <br />
	 }
}

<table class="table">  
    <thead>  
        <tr>  
            <th>  
                Rank
            </th>  
            <th>  
                Area
            </th>  
            <th>  
                Area Name
            </th>  
            <th>  
                Number of Crimes
            </th> 
            <th>  
                Percentage
            </th>  
 
        </tr>  
    </thead>  
    <tbody>  
				@{
				   int rank = 1;
				 }
				
        @foreach (var item in Model.CrimeList)  
        {  
            <tr>  
                <td>  
										@rank
                </td>  
                <td>  
                    @item.Area
                </td>  
                <td>  
                    @item.AreaName
                </td>  
                <td>  
                    @item.NumCrimes
                </td>  
                <td>  
                    @item.totalCrimes
                </td>  
            </tr>  
						
						rank++;
        }  
    </tbody>  
</table> 